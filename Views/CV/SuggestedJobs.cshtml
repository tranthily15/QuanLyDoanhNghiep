@model IEnumerable<QuanLyDoanhNghiep.Models.JobPosition>
@using Newtonsoft.Json.Linq

@{
    ViewData["Title"] = "Gợi ý công việc";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var sectionMap = new Dictionary<string, string>
{
{ "Contact", "Liên hệ" },
{ "Skills", "Kỹ năng" },
{ "Experience", "Kinh nghiệm" },
{ "Education", "Học vấn" }
};
    var pdfUrl = ViewBag.filePath;
}
<div class="box"></div>
<!-- Breadcrumb -->
<div class="container-fluid mt-1">
    <nav aria-label="breadcrumb ">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "JobPosition")">Trang chủ</a>
            </li>
            <li class="breadcrumb-item">
                <a href="@Url.Action("ActiveJobs", "JobPosition")">Quản lý vị trí ứng tuyển</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                Gợi ý vị trí tuyển dụng
            </li>
        </ol>
    </nav>
</div>

<div class="container">
    <div class="row g-4">
        <!-- Bên trái: Xem CV PDF -->
        <div class="col-lg-6">
            <div class="bg-white rounded-4 shadow-sm p-3 h-100 d-flex flex-column">
                <h5 class="mb-3 fw-bold text-primary"><i class="bi bi-file-earmark-pdf me-2"></i>Xem CV PDF</h5>
                <div class="cv-preview-container mb-3">
                    @if (!string.IsNullOrEmpty(pdfUrl))
                    {
                        <embed src="@pdfUrl" type="application/pdf" class="pdf-viewer" />
                    }
                    else
                    {
                        <div class="alert alert-warning m-0">Không tìm thấy file CV.</div>
                    }
                </div>
                <div class="text-center mt-2">
                    <a href="@pdfUrl" target="_blank" class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-box-arrow-up-right"></i> Mở CV toàn màn hình @pdfUrl
                    </a>
                </div>
            </div>
        </div>
        <!-- Bên phải: Thông tin CV & Danh sách việc làm -->
        <div class="col-lg-6">
            <div class="bg-white rounded-4 shadow-sm p-4 mb-4">
                <h5 class="fw-bold mb-3 text-primary"><i class="bi bi-person-vcard me-2"></i>Thông tin đã đọc từ CV</h5>
                @if (ViewBag.CVSections != null)
                {
                    var cvSections = ViewBag.CVSections as JObject;
                    <div>
                        @foreach (var section in cvSections.Properties())
                        {
                            var sectionList = section.Value as JArray;
                            if (sectionList != null && sectionList.Count > 0)
                            {
                                foreach (var item in sectionList)
                                {
                                    <div class="text-muted small mb-1">@item.ToString()</div>
                                }
                            }
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-info">Không có thông tin từ CV.</div>
                }
            </div>
            <div>
                <h5 class="fw-bold mb-3 text-primary"><i class="bi bi-briefcase me-2"></i>Vị trí việc làm phù hợp</h5>
                @if (Model != null && Model.Any())
                {
                    <div class="saved-job-list">
                        @foreach (var job in Model)
                        {
                            <div class="saved-job-card bg-white d-flex px-4 py-3 mb-4 align-items-center">
                                <div class="job-logo flex-shrink-0 me-4">
                                    <img src="/img/CompanyLogo/@(job.Company?.CompanyLogo ?? "default.png")" alt="Logo"
                                        class="img-fluid" style="max-width:64px;max-height:64px;">
                                </div>
                                <div class="flex-grow-1">
                                    <div class="d-flex align-items-center mb-1">
                                        <a href="@Url.Action("Details", "JobPosition", new { id = job.PositionID })"
                                            class="job-title fw-bold text-decoration-none text-truncate text-dark fs-5"
                                            title="@job.PositionName">
                                            @job.PositionName
                                        </a>
                                    </div>
                                    <div class="text-muted mb-1">@job.Company?.CompanyName</div>
                                    <div class="d-flex flex-wrap gap-2">
                                        <span class="badge bg-secondary">@job.Salary</span>
                                        <span class="badge bg-light text-dark"><i class="bi bi-geo-alt"></i>
                                            @(job.JobLocations?.FirstOrDefault()?.Province?.ProvinceName ?? "")</span>
                                    </div>
                                    <div class="mb-2 small text-secondary">
                                        Hạn nộp: @job.EndDate.ToString("dd/MM/yyyy")
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-warning">Không tìm thấy công việc phù hợp.</div>
                }
            </div>
        </div>
    </div>
</div>
<footer class="footer mt-5 pt-4 pb-2">
    <div class="container">
        <div class="row gy-4 align-items-center">
            <div class="col-md-4 mb-3 mb-md-0">
                <h5 class="mb-3"><i class="bi bi-info-circle-fill me-2 "></i>THÔNG TIN LIÊN HỆ</h5>
                <p class="mb-2">Trung tâm "Việc làm và thực tập sinh viên khoa CNTT"</p>
                <p class="mb-2"><i class="bi bi-geo-alt-fill me-2 "></i> Số 1 Phố Xốm, Phú Lãm, Hà Đông, Hà
                    Nội
                </p>
                <p class="mb-2"><i class="bi bi-telephone-fill me-2 "></i> 096 159 55 99</p>
                <p class="mb-0"><i class="bi bi-envelope-fill me-2"></i> khoa.cntt@dainam.edu.vn</p>
            </div>
            <div class="col-md-4 mb-3 mb-md-0">
                <h5 class="mb-3"><i class="bi bi-link-45deg me-2"></i>LIÊN KẾT</h5>
                <a href="#" class="footer-link d-block mb-2"><i class="bi bi-briefcase-fill me-2"></i>Việc làm</a>
                <a href="#" class="footer-link d-block mb-2"><i class="bi bi-mortarboard-fill me-2"></i>Thực tập</a>
                <a href="#" class="footer-link d-block mb-2"><i class="bi bi-lightbulb-fill me-2"></i>Gợi ý việc
                    làm</a>
                <a href="#" class="footer-link d-block"><i class="bi bi-file-earmark-person-fill me-2"></i>CV</a>
            </div>
            <div class="col-md-4 text-center">
                <h5 class="mb-3"><i class="bi bi-share-fill me-2 "></i>MẠNG XÃ HỘI</h5>
                <img src="~/img/logo.png" width="100" class="mb-3 rounded-circle border shadow-sm" />
                <div>
                    <a href="#" class="footer-link fs-4 me-3"><i class="bi bi-facebook"></i></a>
                    <a href="#" class="footer-link fs-4 me-3"><i class="bi bi-youtube"></i></a>
                    <a href="#" class="footer-link fs-4"><i class="bi bi-envelope"></i></a>
                </div>
            </div>
        </div>
        <div class="text-center mt-4 small" style="opacity:0.85;">
            &copy; @DateTime.Now.Year FitJob - Khoa CNTT, Đại học Đại Nam. All rights reserved.
        </div>
    </div>
</footer>
<style>
    .cv-pdf-viewer {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 2px 12px rgba(34, 48, 90, 0.06);
        padding: 8px;
    }

    .saved-job-card {
        background: #fff;
        border: 1.5px solid #e9ecef;
        border-radius: 1.2rem;
        box-shadow: 0 2px 12px rgba(34, 48, 90, 0.06);
        transition: box-shadow 0.18s, border-color 0.18s;
        min-height: 110px;
    }

    .saved-job-card:hover {
        border-color: #f57c00;
        box-shadow: 0 4px 18px rgba(245, 124, 0, 0.10);
    }

    .job-logo {
        background: #fff;
        border: 1.5px solid #e9ecef;
        border-radius: 12px;
        width: 80px;
        height: 80px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .job-title {
        color: #22305a;
        font-weight: 700;
        font-size: 1.15rem;
        transition: color 0.18s;
    }

    .job-title:hover {
        color: #f57c00;
        text-decoration: underline;
    }

    .btn-primary,
    .btn-outline-primary {
        background: #22305a;
        color: #fff;
        border: none;
    }

    .btn-primary:hover,
    .btn-primary:focus,
    .btn-outline-primary:hover,
    .btn-outline-primary:focus {
        background: #f57c00;
        color: #fff;
    }

    .badge {
        font-size: 0.95rem;
        border-radius: 0.7rem;
        padding: 0.4em 0.9em;
        background: #f7e2c4;
        color: #22305a;
        font-weight: 600;
        border: none;
    }

    .badge.bg-secondary {
        background: #f7e2c4 !important;
        color: #22305a !important;
    }

    .badge.bg-light {
        background: #f8f9fa !important;
        color: #22305a !important;
    }

    .text-primary,
    .text-navy {
        color: #22305a !important;
    }

    .text-warning {
        color: #f57c00 !important;
    }

    .cv-preview-container {
        background: #fff;
        border-radius: 8px;
        box-shadow: 0 2px 4px rgba(34, 48, 90, 0.08);
        height: 600px;
        overflow: hidden;
        position: relative;
    }

    .pdf-viewer {
        width: 100%;
        height: 100%;
        border: none;
    }
</style>
