@model IEnumerable<QuanLyDoanhNghiep.Models.JobMatchResult>

@{
    ViewData["Title"] = "Công việc phù hợp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4 py-5">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="fw-bold text-primary">
                <i class="fas fa-briefcase me-2"></i>Công việc phù hợp với CV của bạn
            </h2>
        </div>
    </div>

    <div class="row">
        @foreach (var job in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm hover-shadow">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div>
                                <h5 class="card-title mb-1">@job.PositionName</h5>
                                <h6 class="text-muted mb-2">@job.CompanyName</h6>
                            </div>
                            <div class="text-end">
                                <div class="badge bg-success mb-2">
                                    Phù hợp @job.MatchPercentage.ToString("0.0")%
                                </div>
                                @* <div class="text-muted small">
                                    <i class="fas fa-map-marker-alt me-1"></i>@job.Location
                                </div> *@
                            </div>
                        </div>

                        <div class="mb-3">
                            <h6 class="fw-bold">Kỹ năng phù hợp:</h6>
                            <div class="d-flex flex-wrap gap-2">
                                @foreach (var skill in job.MatchingSkills)
                                {
                                    <span class="badge bg-success">@skill</span>
                                }
                            </div>
                        </div>

                        @if (job.MissingSkills.Any())
                        {
                            <div class="mb-3">
                                <h6 class="fw-bold">Kỹ năng cần bổ sung:</h6>
                                <div class="d-flex flex-wrap gap-2">
                                    @foreach (var skill in job.MissingSkills)
                                    {
                                        <span class="badge bg-warning text-dark">@skill</span>
                                    }
                                </div>
                            </div>
                        }

                        <div class="mb-3">
                            <h6 class="fw-bold">Mô tả công việc:</h6>
                            <p class="text-muted">@job.JobDescription</p>
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            @* <div class="text-primary fw-bold">
                                @if (job.Salary.HasValue)
                                {
                                    <span>@job.Salary.Value.ToString("N0") VNĐ</span>
                                }
                                else
                                {
                                    <span>Thương lượng</span>
                                }
                            </div> *@
                            <a href="@Url.Action("Details", "JobPosition", new { id = job.JobPosition.PositionID })" 
                               class="btn btn-primary">
                                <i class="fas fa-eye me-1"></i>Xem chi tiết
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .hover-shadow {
        transition: all 0.3s ease;
    }

    .hover-shadow:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }

    .badge {
        padding: 0.5em 0.75em;
        font-weight: 500;
    }

    .card {
        border: none;
        border-radius: 10px;
    }

    .btn-primary {
        padding: 0.5rem 1rem;
        border-radius: 5px;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add any JavaScript functionality here
        });
    </script>
} 