@model IEnumerable<QuanLyDoanhNghiep.Models.JobPosition>

@{
    ViewData["Title"] = "Gợi ý công việc";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-primary mb-4">Gợi ý công việc phù hợp</h2>
    <hr />

    @if (Model != null && Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var job in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm hover-card">
                        <div class="card-body">
                            <h5 class="card-title text-primary">@job.PositionName</h5>
                            <h6 class="card-subtitle mb-2 text-muted">@job.Company.CompanyName</h6>
                            <div class="card-text">
                                <p class="mb-2"><strong>Mô tả:</strong> @(job.JobDescription?.Length > 100 ? job.JobDescription.Substring(0, 100) + "..." : job.JobDescription)</p>
                                <p class="mb-2"><strong>Yêu cầu:</strong> @(job.JobRequirements?.Length > 100 ? job.JobRequirements.Substring(0, 100) + "..." : job.JobRequirements)</p>
                                <div class="d-flex justify-content-between text-muted small">
                                    <span><i class="fas fa-calendar-alt"></i> Bắt đầu: @job.StartDate.ToString("dd/MM/yyyy")</span>
                                    <span><i class="fas fa-calendar-check"></i> Kết thúc: @job.EndDate.ToString("dd/MM/yyyy")</span>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-top-0">
                            <a asp-controller="JobPosition" asp-action="Details" asp-route-id="@job.PositionID" class="btn btn-primary w-100">
                                Xem chi tiết
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            Không tìm thấy công việc phù hợp.
        </div>
    }

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
    </div>
</div>

<style>
    .hover-card {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }
    
    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
</style>