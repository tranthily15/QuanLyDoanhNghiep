@model QuanLyDoanhNghiep.Models.JobPosition

@{
    ViewData["Title"] = "Tạo vị trí tuyển dụng";
}

<div class="box"></div>
<div class="box"></div>

<div class="container mt-5">
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <ul>
                @foreach (var modelError in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@modelError.ErrorMessage</li>
                }
            </ul>
        </div>
    }

    <form asp-action="Create" id="jobPositionForm" class="needs-validation" novalidate>
        <div class="row">
            <!-- Form nhập thông tin -->
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h4 class="card-title mb-4">Thông tin vị trí tuyển dụng</h4>

                        <div class="form-group mb-3">
                            <label asp-for="PositionName" class="form-label fw-bold">Tên vị trí ứng tuyển <span class="text-danger">*</span></label>
                            <input asp-for="PositionName" class="form-select" required />
                            <span asp-validation-for="PositionName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="PositionType" class="form-label fw-bold">Loại vị trí ứng tuyển <span class="text-danger">*</span></label>
                            <select asp-for="PositionType" class="form-select" required>
                                
                                <option value="">-- Chọn loại vị trí --</option>
                                <option value="false">Vị trí thực tập</option>
                                <option value="true">Vị trí nhân viên</option>
                            </select>
                            <span asp-validation-for="PositionType" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Vacancies" class="form-label fw-bold">Số lượng tuyển <span class="text-danger">*</span></label>
                                    <input asp-for="Vacancies" class="form-select" type="number" min="1" required />
                                    <span asp-validation-for="Vacancies" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="TimeWork" class="form-label fw-bold">Thời gian làm việc <span class="text-danger">*</span></label>
                                    <input asp-for="TimeWork" class="form-select" required />
                                    <span asp-validation-for="TimeWork" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Salary" class="form-label fw-bold">Mức lương <span class="text-danger">*</span></label>
                            <input asp-for="Salary" class="form-select" required />
                            <span asp-validation-for="Salary" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="StartDate" class="form-label fw-bold">Ngày bắt đầu <span class="text-danger">*</span></label>
                                    <input asp-for="StartDate" type="datetime-local" class="form-select" required />
                                    <span asp-validation-for="StartDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="EndDate" class="form-label fw-bold">Ngày kết thúc <span class="text-danger">*</span></label>
                                    <input asp-for="EndDate" type="datetime-local" class="form-select" required />
                                    <span asp-validation-for="EndDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="JobDescription" class="form-label fw-bold">Mô tả công việc <span class="text-danger">*</span></label>
                            <div id="editor-job-description" class="quill-editor"></div>
                            <input type="hidden" asp-for="JobDescription" id="jobDescription" required />
                            <span asp-validation-for="JobDescription" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="JobRequirements" class="form-label fw-bold">Yêu cầu công việc <span class="text-danger">*</span></label>
                            <div id="editor-job-requirements" class="quill-editor"></div>
                            <input type="hidden" asp-for="JobRequirements" id="jobRequirements" required />
                            <span asp-validation-for="JobRequirements" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="JobBenefits" class="form-label fw-bold">Quyền lợi <span class="text-danger">*</span></label>
                            <div id="editor-job-benefits" class="quill-editor"></div>
                            <input type="hidden" asp-for="JobBenefits" id="jobBenefits" required />
                            <span asp-validation-for="JobBenefits" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="CategoryID" class="form-label fw-bold">Nhóm vị trí CNTT <span class="text-danger">*</span></label>
                            <select asp-for="CategoryID" class="form-select" asp-items="ViewBag.Categories">
                                <option value="">-- Chọn nhóm vị trí --</option>
                            </select>
                            <span asp-validation-for="CategoryID" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label class="form-label fw-bold">Địa chỉ tuyển dụng <span class="text-danger">*</span></label>
                            <div id="jobLocations">
                                <div class="job-location-item card mb-3">
                                    <div class="card-body">
                                        <div class="mb-3">
                                            <label class="form-label">Địa chỉ cụ thể</label>
                                            <input type="text" class="form-select" name="JobLocations[0].Street" required />
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Tỉnh/Thành phố</label>
                                            <select class="form-select province-dropdown" name="JobLocations[0].ProvinceID" required>
                                                <option value="">-- Chọn tỉnh/thành phố --</option>
                                                @foreach (var province in ViewBag.Provinces)
                                                {
                                                    <option value="@province.ProvinceID">@province.ProvinceName</option>
                                                }
                                            </select>
                                        </div>

                                        <div class="mb-3">
                                            <label class="form-label">Quận/Huyện</label>
                                            <select class="form-select district-dropdown" name="JobLocations[0].DistrictID" >
                                                <option value="">-- Chọn quận/huyện --</option>
                                            </select>
                                        </div>

                                        <div class="mb-3">
                                            <label class="form-label">Phường/Xã</label>
                                            <select class="form-select ward-dropdown" name="JobLocations[0].WardID">
                                                <option value="">-- Chọn phường/xã --</option>
                                            </select>
                                        </div>

                                        <button type="button" class="btn btn-danger remove-location">
                                            <i class="fas fa-trash-alt"></i> Xóa địa chỉ
                                        </button>
                                    </div>
                                </div>
                            </div>

                            <button type="button" class="btn btn-success" id="addLocation">
                                <i class="fas fa-plus"></i> Thêm địa chỉ
                            </button>
                        </div>

                        <div class="form-footer text-end">
                            <button type="button" class="btn btn-secondary me-2" onclick="window.location.href='@Url.Action("Index", "JobPosition")'">
                                <i class="fas fa-times"></i> Đóng
                            </button>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Lưu
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Xem trước -->
            <div class="col-md-6">
                <div class="card shadow-sm preview-container">
                    <div class="card-body">
                        <h4 class="card-title mb-4">Xem trước thông tin tuyển dụng</h4>
                        
                        <div class="preview-content">
                            <!-- Job Title and Basic Info -->
                            <h1 id="preview-position-name" class="job-title mb-4"></h1>
                            
                            <!-- Job Overview Cards -->
                            <div class="job-overview-cards mb-4">
                                <div class="overview-card">
                                    <div class="icon-wrapper">
                                        <i class="fas fa-money-bill-wave"></i>
                                    </div>
                                    <div class="info">
                                        <label>Thu nhập</label>
                                        <span id="preview-salary"></span>
                                    </div>
                                </div>
                                <div class="overview-card">
                                    <div class="icon-wrapper">
                                        <i class="fas fa-map-marker-alt"></i>
                                    </div>
                                    <div class="info">
                                        <label>Địa điểm</label>
                                        <span id="preview-locations-short"></span>
                                    </div>
                                </div>
                                <div class="overview-card">
                                    <div class="icon-wrapper">
                                        <i class="fas fa-clock"></i>
                                    </div>
                                    <div class="info">
                                        <label>Thời gian làm việc</label>
                                        <span id="preview-time-work"></span>
                                    </div>
                                </div>
                            </div>

                            <!-- Job Overview -->
                            <div class="content-section">
                                <h3 class="section-title">Tổng quan</h3>
                                <div class="job-overview">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="overview-item">
                                                <i class="fas fa-users"></i>
                                                <div class="item-content">
                                                    <label>Số lượng tuyển</label>
                                                    <span><span id="preview-vacancies"></span> người</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="overview-item">
                                                <i class="fas fa-briefcase"></i>
                                                <div class="item-content">
                                                    <label>Hình thức</label>
                                                    <span id="preview-position-type"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Job Description -->
                            <div class="content-section">
                                <h3 class="section-title">Mô tả công việc</h3>
                                <div class="section-content" id="preview-description"></div>
                            </div>

                            <!-- Job Requirements -->
                            <div class="content-section">
                                <h3 class="section-title">Yêu cầu ứng viên</h3>
                                <div class="section-content" id="preview-requirements"></div>
                            </div>

                            <!-- Benefits -->
                            <div class="content-section">
                                <h3 class="section-title">Quyền lợi</h3>
                                <div class="section-content benefits-section" id="preview-benefits"></div>
                            </div>

                            <!-- Work Locations -->
                            <div class="content-section">
                                <h3 class="section-title">Địa điểm làm việc</h3>
                                <div id="preview-locations" class="location-list"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
    <script>
        var quillDescription = new Quill('#editor-job-description', { theme: 'snow' });
        var quillRequirements = new Quill('#editor-job-requirements', { theme: 'snow' });
        var quillBenefits = new Quill('#editor-job-benefits', { theme: 'snow' });

        // Preview update functions
        function updatePreview() {
            $('#preview-position-name').text($('#PositionName').val() || 'Tên vị trí tuyển dụng');
            $('#preview-position-type').text($('select[name="PositionType"] option:selected').text());
            $('#preview-vacancies').text($('#Vacancies').val() || '0');
            $('#preview-time-work').text($('#TimeWork').val() || 'Chưa cập nhật');
            $('#preview-salary').text($('#Salary').val() || 'Thỏa thuận');
            
            // Format datetime for preview
            var startDate = new Date($('#StartDate').val());
            var endDate = new Date($('#EndDate').val());
            
            $('#preview-description').html(quillDescription.root.innerHTML);
            $('#preview-requirements').html(quillRequirements.root.innerHTML);
            $('#preview-benefits').html(quillBenefits.root.innerHTML);
            
            // Update locations preview
            var locations = [];
            var firstLocation = '';
            $('.job-location-item').each(function(index) {
                var province = $(this).find('.province-dropdown option:selected').text();
                var district = $(this).find('.district-dropdown option:selected').text();
                var ward = $(this).find('.ward-dropdown option:selected').text();
                var street = $(this).find('input[name$=".Street"]').val();
                
                if(province && district && ward && street) {
                    if(index === 0) {
                        firstLocation = province;
                    }
                    
                    var locationHtml = `
                        <div class="location-item">
                            <i class="fas fa-map-marker-alt"></i>
                            <div class="location-content">
                                <p class="street">${street}</p>
                                <p class="area">${ward}, ${district}, ${province}</p>
                            </div>
                        </div>
                    `;
                    locations.push(locationHtml);
                }
            });
            
            $('#preview-locations-short').text(firstLocation || 'Chưa cập nhật');
            $('#preview-locations').html(locations.join(''));
        }

        // Add event listeners for preview updates
        $('input, select').on('change', updatePreview);
        quillDescription.on('text-change', updatePreview);
        quillRequirements.on('text-change', updatePreview);
        quillBenefits.on('text-change', updatePreview);

        // Form validation
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()

        // Handle dynamic location fields
        var locationIndex = 1;
        $('#addLocation').click(function() {
            var newLocation = $('.job-location-item').first().clone();
            newLocation.find('select, input').each(function() {
                var name = $(this).attr('name');
                if (name) {
                    $(this).attr('name', name.replace('[0]', '[' + locationIndex + ']'));
                }
                $(this).val('');
            });
            $('#jobLocations').append(newLocation);
            locationIndex++;
        });

        $(document).on('click', '.remove-location', function() {
            if ($('.job-location-item').length > 1) {
                $(this).closest('.job-location-item').remove();
            }
        });

        // Handle cascading dropdowns
        $('.province-dropdown').change(function() {
            var provinceId = $(this).val();
            var districtDropdown = $(this).closest('.job-location-item').find('.district-dropdown');
            var wardDropdown = $(this).closest('.job-location-item').find('.ward-dropdown');
            
            districtDropdown.empty().append('<option value="">-- Chọn quận/huyện --</option>');
            wardDropdown.empty().append('<option value="">-- Chọn phường/xã --</option>');
            
            if (provinceId) {
                $.get('/JobPosition/GetDistricts', { provinceId: provinceId }, function(districts) {
                    districts.forEach(function(district) {
                        districtDropdown.append($('<option></option>')
                            .attr('value', district.districtID)
                            .text(district.districtName));
                    });
                });
            }
        });

        $('.district-dropdown').change(function() {
            var districtId = $(this).val();
            var wardDropdown = $(this).closest('.job-location-item').find('.ward-dropdown');
            
            wardDropdown.empty().append('<option value="">-- Chọn phường/xã --</option>');
            
            if (districtId) {
                $.get('/JobPosition/GetWards', { districtId: districtId }, function(wards) {
                    wards.forEach(function(ward) {
                        wardDropdown.append($('<option></option>')
                            .attr('value', ward.wardID)
                            .text(ward.wardName));
                    });
                });
            }
        });

        // Update hidden fields before form submission
        $('#jobPositionForm').submit(function() {
            // Validate Quill editors
            if (quillDescription.root.innerHTML === '<p><br></p>' || 
                quillRequirements.root.innerHTML === '<p><br></p>' || 
                quillBenefits.root.innerHTML === '<p><br></p>') {
                alert('Vui lòng điền đầy đủ thông tin mô tả, yêu cầu và quyền lợi.');
                return false;
            }

            // Validate dates
            var startDate = new Date($('#StartDate').val());
            var endDate = new Date($('#EndDate').val());
            if (endDate < startDate) {
                alert('Ngày kết thúc phải sau ngày bắt đầu');
                return false;
            }

            // Update hidden fields
            $('#jobDescription').val(quillDescription.root.innerHTML);
            $('#jobRequirements').val(quillRequirements.root.innerHTML);
            $('#jobBenefits').val(quillBenefits.root.innerHTML);
        });
    </script>
}

