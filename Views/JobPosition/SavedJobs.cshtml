<style>
    .saved-job-card {
        background: #f6fcff;
        border: 1.5px solid #1a73e8;
        border-radius: 1.2rem;
        box-shadow: 0 2px 12px rgba(26, 115, 232, 0.06);
        transition: box-shadow 0.18s, border-color 0.18s;
        min-height: 110px;
    }

    .saved-job-card:hover {
        border-color: #f37423;
        box-shadow: 0 4px 18px rgba(243, 116, 35, 0.10);
    }

    .job-logo {
        background: #fff;
        border: 1.5px solid #e3e3e3;
        border-radius: 12px;
        width: 80px;
        height: 80px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .job-title {
        color: #1a73e8;
        font-weight: 700;
        font-size: 1.15rem;
        transition: color 0.18s;
    }

    .job-title:hover {
        color: #f37423;
        text-decoration: underline;
    }

    .btn-success {
        background: #1a73e8;
        border: none;
    }

    .btn-success:hover,
    .btn-success:focus {
        background: #f37423;
        color: #fff;
    }

    .btn-outline-secondary {
        border-color: #e41e3f;
        color: #e41e3f;
    }

    .btn-outline-secondary:hover {
        background: #e41e3f;
        color: #fff;
    }

    .badge {
        font-size: 0.95rem;
        border-radius: 0.7rem;
        padding: 0.4em 0.9em;
    }
</style>
