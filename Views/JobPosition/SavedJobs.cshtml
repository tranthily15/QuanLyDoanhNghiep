@model IEnumerable<QuanLyDoanhNghiep.Models.SavedJob>

@{
    ViewData["Title"] = "Việc làm đã lưu";
}

<div class="container mt-4">
    <h2 class="mb-4">Việc làm đã lưu</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            Bạn chưa lưu tin tuyển dụng nào.
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 g-4">
            @foreach (var saved in Model)
            {
                var job = saved.JobPosition;
                <div class="col">
                    <div class="card p-3">
                        <h5>@job.PositionName</h5>
                        <div class="text-muted">@job.Company?.CompanyName</div>
                        <div>Lương: @job.Salary</div>
                        <a href="@Url.Action("Details", "JobPosition", new { id = job.PositionID })"
                            class="btn btn-primary btn-sm mt-2">Xem chi tiết</a>
                        <form asp-action="UnsaveJob" asp-controller="JobPosition" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="positionId" value="@job.PositionID" />
                            <button type="submit" class="btn btn-outline-danger btn-sm ms-2">Bỏ lưu</button>
                        </form>
                    </div>
                </div>
            }
        </div>
    }
</div>