@model QuanLyDoanhNghiep.Models.JobPosition

@{
    ViewData["Title"] = "Delete";
}
<center>
    <div class="box"></div>
    <div class="box"></div>


        <div class="form-container">
            <h3>bạn có chắc muốn xóa vị trí ứng tuyển này?</h3>

            <br />
            <dl class="row">
                <dt class="col-sm-3">Tên vị trí</dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.PositionName)
                </dd>

                <dt class="col-sm-3">Loại vị trí</dt>
                <dd class="col-sm-8">
                    <input style="width:auto; border:none; background:none;"
                           value="@(Model.PositionType ? "Vị trí nhân viên" : "Vị trí thực tập sinh")" readonly />
                </dd>

                <dt class="col-sm-3">Số lượng ứng tuyển</dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Vacancies)
                </dd>

                <dt class="col-sm-3">Mô tả công việc</dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.JobDescription)
                </dd>

                <dt class="col-sm-3">Ngày bắt đầu</dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.StartDate)
                </dd>

                <dt class="col-sm-3">Ngày kết thúc</dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.EndDate)
                </dd>

                <dt class="col-sm-3">Trạng thái</dt>
                <dd class="col-sm-8">
                    <input style="width:auto; border:none; background:none;"
                           value="@(Model.Status ? "Đang tuyển" : "Kết thúc tuyển")" readonly />
                </dd>

                <dt class="col-sm-3">Công ty</dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Company.CompanyName)
                </dd>
            </dl>
            <div class="form-footer">
                <button type="button" class="btn_save" onclick="location.href='@Url.Action("Index", new { id = Model?.PositionID })'">Quay lại</button>
                <button type="button" class="btn_close" onclick="location.href='@Url.Action("Delete", new { id = Model?.PositionID })'">Xóa</button>

            </div>
        </div>
       
</center>
