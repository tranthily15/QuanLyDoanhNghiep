@{
    var currentPage = ViewBag.CurrentPage ?? 1;
    var totalPages = ViewBag.TotalPages ?? 1;
    var pageSize = ViewBag.PageSize ?? 20;
    int sttStart = (currentPage - 1) * pageSize + 1;
    // Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="box"></div>
<div class="container pb-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Dashboard")">Bảng điều khiển hệ thống</a>
            </li>
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Company")">Danh sách doanh nghiệp</a>
            </li>
            <li class="breadcrumb-item">
                <a href="@Url.Action("CompanyYearlyStats", "Dashboard")">Thống kê doanh nghiệp theo năm</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                Thống kê doanh nghiệp theo tháng
            </li>
        </ol>
    </nav>
</div>
<div class="container mb-4">
    <div class="card shadow-sm border-0 p-3 rounded-4 mb-3">
        <form method="get" class="row g-3 align-items-center justify-content-center">
            <div class="col-auto">
                <label for="month" class="col-form-label fw-semibold text-navy">
                    <i class="bi bi-calendar3 me-1 text-warning"></i>Tháng
                </label>
            </div>
            <div class="col-auto">
                <select id="month" name="month" class="form-select rounded-3">
                    @foreach (var m in ViewBag.Months)
                    {
                        if (m == ViewBag.SelectedMonth)
                        {
                            <option value="@m" selected="selected">Tháng @m</option>
                        }
                        else
                        {
                            <option value="@m">Tháng @m</option>
                        }
                    }
                </select>
            </div>
            <div class="col-auto">
                <label for="year" class="col-form-label fw-semibold text-navy">
                    <i class="bi bi-calendar2 me-1 text-warning"></i>Năm
                </label>
            </div>
            <div class="col-auto">
                <select id="year" name="year" class="form-select rounded-3">
                    @foreach (var y in ViewBag.Years)
                    {
                        if (y == ViewBag.SelectedYear)
                        {
                            <option value="@y" selected="selected">@y</option>
                        }
                        else
                        {
                            <option value="@y">@y</option>
                        }
                    }
                </select>
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-warning fw-bold px-4 rounded-3">
                    <i class="bi bi-funnel me-1"></i> Lọc
                </button>
            </div>
        </form>
    </div>
    <div class="alert alert-info mb-3">
        <strong>Tổng số doanh nghiệp đang hoạt động:</strong> @ViewBag.TotalActiveCompany
    </div>
    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>STT</th>
                    <th>Doanh nghiệp</th>
                    <th>Số vị trí đăng tuyển</th>
                    <th>Tổng CV đã nhận</th>
                    <th>CV được duyệt</th>
                    <th>CV bị từ chối</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int stt = sttStart;
                    foreach (var c in ViewBag.CompanyStats)
                    {
                        <tr>
                            <td>@(stt++)</td>
                            <td> <a asp-action="Details" asp-route-id="@c.CompanyID" class="text-dark">@c.CompanyName</a>
                            </td>
                            <td>@c.JobCount</td>
                            <td>@c.CVTotal</td>
                            <td>@c.CVAccepted</td>
                            <td>@c.CVRejected</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    @if (totalPages > 1)
    {
        <nav>
            <ul class="pagination justify-content-center my-4">
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <a class="page-link"
                        href="@Url.Action("CompanyMonthlyStats", new { month = ViewBag.SelectedMonth, year = ViewBag.SelectedYear, page = currentPage - 1 })">
                        <i class="bi bi-chevron-left"></i>
                    </a>
                </li>
                @for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link"
                            href="@Url.Action("CompanyMonthlyStats", new { month = ViewBag.SelectedMonth, year = ViewBag.SelectedYear, page = i })">@i</a>
                    </li>
                }
                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                    <a class="page-link"
                        href="@Url.Action("CompanyMonthlyStats", new { month = ViewBag.SelectedMonth, year = ViewBag.SelectedYear, page = currentPage + 1 })">
                        <i class="bi bi-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    }
</div>


<style>
    .text-navy {
        color: #22305a !important;
    }

    .btn-warning {
        background: #f57c00 !important;
        color: #fff !important;
        font-weight: 600;
        border-radius: 8px;
        border: none;
        transition: background 0.2s, color 0.2s;
    }

    .btn-warning:hover,
    .btn-warning:focus {
        background: #22305a !important;
        color: #fff !important;
    }

    .form-select {
        border-radius: 8px !important;
        border: 1.5px solid #e9ecef;
        font-weight: 500;
        color: #22305a;
    }

    .nav-tabs .nav-link.active {
        color: #22305a !important;
        font-weight: 700;
        border-bottom: 3px solid #f57c00 !important;
        background: #fff !important;
    }

    .nav-tabs .nav-link {
        color: #22305a !important;
        font-weight: 600;
        border-radius: 8px 8px 0 0;
        border: none;
        background: #f8f9fa;
        margin-right: 2px;
    }

    .nav-tabs {
        border-bottom: 1.5px solid #e9ecef;
    }
</style>
