@{
    ViewData["Title"] = "Thống kê người dùng";
    var student = ViewBag.User;
    var cvStats = ViewBag.cv ?? new Dictionary<string, int>();
    var timeStats = ViewBag.timeStats ?? new Dictionary<string, int>();
}

<div class="box"></div>
<div class="container py-2">
    <nav aria-label="breadcrumb ms-1 mt-2">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "JobPosition")">Trang chủ</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                Thống kê người dùng
            </li>
        </ol>
    </nav>
</div>

<div class="container mb-4 py-2">
    <div class="row g-4">
        <div class="col-lg-4">
            <div class="card shadow-sm border-0 rounded-4 p-4 h-100">
                <div class="d-flex align-items-center mb-3">
                    <div class="avatar-placeholder me-3" style="width:80px;height:80px;">
                        @{
                            var initials = !string.IsNullOrEmpty(student.FullName)
                            ? student.FullName.Substring(0, 1).ToUpper()
                            : "SV";
                        }
                        <span style="font-size:2.2rem;">@initials</span>
                    </div>
                    <div>
                        <h4 class="mb-1 fw-bold text-navy">@student.FullName</h4>
                        <div class="text-muted">
                            @(string.IsNullOrEmpty(student.Email) ? "Chưa cập nhật email" : student.Email)
                        </div>
                        <div class="text-muted">
                            @(string.IsNullOrEmpty(student.PhoneNumber) ? "Chưa cập nhật SĐT" : student.PhoneNumber)
                        </div>
                    </div>
                </div>
                <div class="border-top pt-3 mt-3">
                    <div class="d-flex flex-column gap-2">
                        <div class="d-flex align-items-center gap-2">
                            <i class="fas fa-file-alt text-warning"></i>
                            <span class="fw-semibold">@cvStats["TotalCVCount"] CV đã nộp</span>
                        </div>
                        <div class="d-flex align-items-center gap-2">
                            <i class="fas fa-check-circle text-success"></i>
                            <span class="fw-semibold">@cvStats["AcceptedCount"] CV được chấp nhận</span>
                        </div>
                        <div class="d-flex align-items-center gap-2">
                            <i class="fas fa-times-circle text-danger"></i>
                            <span class="fw-semibold">@cvStats["RejectedCount"] CV bị từ chối</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 rounded-4 p-4 mb-4">
                <h5 class="fw-bold mb-3 text-navy">
                    <i class="fas fa-chart-bar text-warning me-2"></i>Thống kê CV của bạn
                </h5>
                <div class="row g-3 mb-4">
                    <div class="col-md-3">
                        <div class="stat-box text-center">
                            <div class="stat-icon blue mb-2"><i class="fas fa-file-alt"></i></div>
                            <div class="fw-bold fs-5">@cvStats["TotalCVCount"]</div>
                            <div class="text-muted small">Tổng số CV</div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stat-box text-center">
                            <div class="stat-icon yellow mb-2"><i class="fas fa-clock"></i></div>
                            <div class="fw-bold fs-5">@cvStats["PendingCount"]</div>
                            <div class="text-muted small">Đang chờ</div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stat-box text-center">
                            <div class="stat-icon green mb-2"><i class="fas fa-check-circle"></i></div>
                            <div class="fw-bold fs-5">@cvStats["AcceptedCount"]</div>
                            <div class="text-muted small">Đã chấp nhận</div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stat-box text-center">
                            <div class="stat-icon red mb-2"><i class="fas fa-times-circle"></i></div>
                            <div class="fw-bold fs-5">@cvStats["RejectedCount"]</div>
                            <div class="text-muted small">Đã từ chối</div>
                        </div>
                    </div>
                </div>
                <div class="chart-section">
                    <div class="chart-header mb-2 text-muted">Phân bố CV theo trạng thái</div>
                    <div class="chart-container" style="height: 220px;">
                        <canvas id="cvStatusChart"></canvas>
                    </div>
                </div>
            </div>
            <div class="card shadow-sm border-0 rounded-4 p-4">
                <h5 class="fw-bold mb-3 text-navy">
                    <i class="fas fa-history text-warning me-2"></i>Thống kê theo thời gian
                </h5>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        CV nộp hôm nay
                        <span class="badge bg-primary rounded-pill">@timeStats["CVsSubmittedToday"]</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        CV nộp tuần này
                        <span class="badge bg-primary rounded-pill">@timeStats["CVsSubmittedThisWeek"]</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        CV nộp tháng này
                        <span class="badge bg-primary rounded-pill">@timeStats["CVsSubmittedThisMonth"]</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<footer class="footer mt-5 pt-4 pb-2">
    <div class="container">
        <div class="row gy-4 align-items-center">
            <div class="col-md-4 mb-3 mb-md-0">
                <h5 class="mb-3"><i class="bi bi-info-circle-fill me-2 "></i>THÔNG TIN LIÊN HỆ</h5>
                <p class="mb-2">Trung tâm "Việc làm và thực tập sinh viên khoa CNTT"</p>
                <p class="mb-2"><i class="bi bi-geo-alt-fill me-2 "></i> Số 1 Phố Xốm, Phú Lãm, Hà Đông, Hà
                    Nội
                </p>
                <p class="mb-2"><i class="bi bi-telephone-fill me-2 "></i> 096 159 55 99</p>
                <p class="mb-0"><i class="bi bi-envelope-fill me-2"></i> khoa.cntt@dainam.edu.vn</p>
            </div>
            <div class="col-md-4 mb-3 mb-md-0">
                <h5 class="mb-3"><i class="bi bi-link-45deg me-2"></i>LIÊN KẾT</h5>
                <a href="#" class="footer-link d-block mb-2"><i class="bi bi-briefcase-fill me-2"></i>Việc làm</a>
                <a href="#" class="footer-link d-block mb-2"><i class="bi bi-mortarboard-fill me-2"></i>Thực tập</a>
                <a href="#" class="footer-link d-block mb-2"><i class="bi bi-lightbulb-fill me-2"></i>Gợi ý việc
                    làm</a>
                <a href="#" class="footer-link d-block"><i class="bi bi-file-earmark-person-fill me-2"></i>CV</a>
            </div>
            <div class="col-md-4 text-center">
                <h5 class="mb-3"><i class="bi bi-share-fill me-2 "></i>MẠNG XÃ HỘI</h5>
                <img src="~/img/logo.png" width="100" class="mb-3 rounded-circle border shadow-sm" />
                <div>
                    <a href="#" class="footer-link fs-4 me-3"><i class="bi bi-facebook"></i></a>
                    <a href="#" class="footer-link fs-4 me-3"><i class="bi bi-youtube"></i></a>
                    <a href="#" class="footer-link fs-4"><i class="bi bi-envelope"></i></a>
                </div>
            </div>
        </div>
        <div class="text-center mt-4 small" style="opacity:0.85;">
            &copy; @DateTime.Now.Year FitJob - Khoa CNTT, Đại học Đại Nam. All rights reserved.
        </div>
    </div>
</footer>
<style>
    .avatar-placeholder {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, #f57c00 0%, #ffb980 100%);
        color: #fff;
        font-size: 2.2rem;
        font-weight: 700;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 4px 15px rgba(245, 124, 0, 0.15);
    }

    .stat-box {
        background: #f8f9fa;
        border-radius: 10px;
        padding: 18px 0 10px 0;
        border: 1px solid #e9ecef;
        min-height: 90px;
    }

    .stat-icon {
        width: 38px;
        height: 38px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 6px auto;
        color: #fff;
        font-size: 1.2rem;
    }

    .stat-icon.blue {
        background: #1a73e8;
    }

    .stat-icon.green {
        background: #00b14f;
    }

    .stat-icon.yellow {
        background: #fbbc04;
    }

    .stat-icon.red {
        background: #ea4335;
    }

    .chart-section {
        background: #f8f9fa;
        border-radius: 8px;
        padding: 18px;
        margin-top: 18px;
    }

    .chart-header {
        color: #6c757d;
        font-size: 14px;
    }

    .list-group-item {
        border: none;
        background: transparent;
        font-size: 1rem;
        font-weight: 500;
    }

    .list-group-item:not(:last-child) {
        border-bottom: 1px solid #e9ecef;
    }

    .badge.bg-primary {
        background: #22305a !important;
        color: #fff !important;
        font-weight: 600;
        font-size: 1rem;
    }
</style>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // CV Status Chart
        const cvStatusCtx = document.getElementById('cvStatusChart').getContext('2d');
        new Chart(cvStatusCtx, {
            type: 'doughnut',
            data: {
                labels: ['Đang chờ', 'Đã duyệt', 'Từ chối'],
                datasets: [{
                    label: 'Số lượng CV',
                    data: [
                            @(cvStats["PendingCount"]),
                            @(cvStats["AcceptedCount"]),
                        @(cvStats["RejectedCount"])
                    ],
                    backgroundColor: ['#fbbc04', '#00b14f', '#ea4335']
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { position: 'bottom' },
                    title: { display: false }
                }
            }
        });
    </script>
}