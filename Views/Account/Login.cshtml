@model QuanLyDoanhNghiep.Models.Account
@{
    ViewData["Title"] = "Đăng nhập";
    ViewData["CSS"] = Url.Content("~/css/login.css");
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="login-bg d-flex justify-content-center align-items-center w-100"
    style="min-height:100vh; background: #F1F3F5;">
    <div class="card shadow-sm border-0 rounded-4 p-4 mx-auto" style="width: 380px; background: #fff;">
        <div class="text-center mb-4">
            <a asp-action="Index" asp-controller="JobPosition">
                <img src="~/img/logo.png" alt="Logo" style="height:56px;" class="mb-2" /></a>
            <h2 class="fw-bold text-navy mb-2">Đăng nhập</h2>
            <div class="text-muted mb-2" style="font-size:15px;">Chào mừng bạn quay lại hệ thống</div>
        </div>
        <form asp-action="Login" method="post" class="login-form">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>
            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0"><i class="fas fa-user text-navy"></i></span>
                    <input type="text" asp-for="UserName" placeholder="Tên đăng nhập"
                        class="form-control border-start-0 rounded-end" autocomplete="username" />
                </div>
                <span asp-validation-for="UserName" class="text-danger small"></span>
            </div>
            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0"><i class="fas fa-lock text-navy"></i></span>
                    <input type="password" asp-for="Password" placeholder="Mật khẩu"
                        class="form-control border-start-0 rounded-end" autocomplete="current-password" />
                </div>
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>
            <div class="d-flex justify-content-between align-items-center mb-3">
                <label class="form-check-label text-muted">
                    <input type="checkbox" name="remember" class="form-check-input me-1" /> Ghi nhớ đăng nhập
                </label>
                <a asp-action="ForgotPassword" class="text-navy small" style="text-decoration:none;">Quên mật khẩu?</a>
            </div>
            <button type="submit" class="btn modern-btn w-100 py-2 fs-5">Đăng nhập</button>
        </form>
    </div>
</div>

