@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
<div class="login-bg d-flex justify-content-center align-items-center w-100"
    style="min-height:100vh; background: #F1F3F5;">
    <div class="card shadow-sm border-0 rounded-4 p-4 mx-auto" style="width: 380px; background: #fff;">
        <div class="text-center mb-4">
            <img src="~/img/logo.png" alt="Logo" style="height:56px;" class="mb-2" />
            <h2 class="fw-bold text-navy mb-2">Quên mật khẩu</h2>
            <div class="text-muted mb-2" style="font-size:15px;">Nhập tên tài khoản và email đã đăng ký để nhận mật khẩu
                mới</div>
        </div>
        <form asp-action="ForgotPassword" method="post">
            <div class="mb-3">
                <input type="text" name="username" class="form-control modern-input" placeholder="Tên tài khoản"
                    required />
            </div>
            <div class="mb-3">
                <input type="email" name="email" class="form-control modern-input" placeholder="Email đã đăng ký"
                    required />
            </div>
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-info">@ViewBag.Message</div>
            }
            <button type="submit" class="btn modern-btn w-100 py-2 fs-5">Gửi mật khẩu mới</button>
            <div class="text-center mt-3">
                <a asp-action="Login" class="text-navy">Quay lại đăng nhập</a>
            </div>
        </form>
    </div>
</div>
