<!DOCTYPE html>
<html lang="en" style="height: 70px">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuanLyDoanhNghiep</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @if (ViewData["CSS"] != null)
    {
        <link rel="stylesheet" href="@ViewData["CSS"]" />
    }
    <link rel="stylesheet" href="~/QuanLyDoanhNghiep.styles.css" asp-append-version="true" />

    <style>
        header .navbar {
            background-color: #f37423 !important;
            height: 75px;
        }

        .navbar-brand img {
            width: 60px;
            height: 60px;
        }

        .navbar-nav .nav-link {
            color: white !important;
            font-weight: 500;
        }

        .dropdown-menu {
            min-width: 200px;
        }
    </style>
    @RenderSection("Styles", required: false)
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light border-bottom shadow-sm">
            <div class="container-fluid d-flex justify-content-between">
                <!-- Logo và Trang chủ bên trái -->
                <div class="d-flex align-items-center">
                    <a class="navbar-brand me-3" asp-area="" asp-controller="JobPosition" asp-action="Index">
                        <img src="~/img/logo.png" alt="Logo">
                    </a>
                    <a class="nav-link text-light" asp-area="" asp-controller="JobPosition" asp-action="Index">
                        <i class="bi bi-house-door text-light"></i> Trang chủ
                    </a>
                </div>

                <!-- Các mục còn lại bên phải -->
                <div>
                    <ul class="navbar-nav flex-row gap-3">
                        @if (ViewBag.IsLogin == true)
                        {
                            @if (ViewBag.Role == "0") // Admin
                            {
                                <a class="nav-link text-light" asp-area="" asp-controller="Account" asp-action="Index">
                                    <i class="fas fa-users-cog text-light"></i> Quản lý người dùng
                                </a>
                                <a class="nav-link text-light" asp-area="" asp-controller="Company" asp-action="Index">
                                    <i class="fas fa-building text-light"></i> Quản lý doanh nghiệp
                                </a>
                                <a class="nav-link text-light" asp-area="" asp-controller="Statistics" asp-action="AdminStatistics">
                                    <i class="fas fa-chart-bar text-light"></i> Thống kê
                                </a>
                                <li class="nav-item mx-1 position-relative">
                                    <a class="nav-link position-relative" href="/Notification">
                                        <i class="fas fa-bell fa-fw fs-5"></i>
                                        <span id="notificationCount" class="badge badge-danger badge-counter" style="display: none;">0</span>
                                    </a>
                                </li>

                            }
                            else if (ViewBag.Role == "1") // Employee
                            {
                                <a class="nav-link text-light" asp-area="" asp-controller="JobPosition" asp-action="Create">
                                    <i class="fas fa-file-alt text-light"></i> Đăng tin tuyển
                                </a>
                                <a class="nav-link text-light" asp-area="" asp-controller="JobPosition" asp-action="Index">
                                    <i class="fas fa-briefcase text-light"></i> Tin tuyển dụng
                                </a>
                                <a class="nav-link text-light" asp-area="" asp-controller="CV" asp-action="Index">
                                    <i class="fas fa-file-alt text-light"></i> CV
                                </a>
                                <a class="nav-link text-light" asp-area="" asp-controller="Dashboard" asp-action="Index_Employee">
                                    <i class="fas fa-chart-bar text-light"></i> Thống kê
                                </a>
                                <li class="nav-item mx-1 position-relative">
                                    <a class="nav-link position-relative" href="/Notification">
                                        <i class="fas fa-bell fa-fw fs-5"></i>
                                        <span id="notificationCount" class="badge badge-danger badge-counter" style="display: none;">0</span>
                                    </a>
                                </li>

                            }
                            else if (ViewBag.Role == "2") // Student
                            {
                                <a class="nav-link text-light" asp-area="" asp-controller="JobPosition" asp-action="Index">
                                    <i class="fas fa-search text-light"></i> Tìm việc
                                </a>
                                <a class="nav-link text-light" asp-area="" asp-controller="CV" asp-action="Index">
                                    <i class="fas fa-file-alt text-light"></i> CV của tôi
                                </a>
                                <a class="nav-link text-light" asp-area="" asp-controller="Dashboard" asp-action="Index_Student">
                                    <i class="fas fa-chart-bar text-light"></i> Thống kê
                                </a>
                                <li class="nav-item mx-1 position-relative">
                                    <a class="nav-link position-relative" href="/Notification">
                                        <i class="fas fa-bell fa-fw fs-5"></i>
                                        <span id="notificationCount" class="badge badge-danger badge-counter" style="display: none;">0</span>
                                    </a>
                                </li>

                            }
                        }

                        <div class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle"></i> @(ViewBag.IsLogin == true ? ViewBag.CurrentUser : "Tài khoản")
                            </a>
                            <div class="dropdown-menu dropdown-menu-end fade-up" aria-labelledby="userDropdown">
                                @if (ViewBag.IsLogin == true)
                                {
                                    <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Details">
                                        <i class="bi bi-person-square"></i> Thông tin cá nhân
                                    </a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Logout">
                                        <i class="bi bi-box-arrow-right"></i> Đăng xuất
                                    </a>
                                }
                                else
                                {
                                    <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Login">
                                        <i class="bi bi-box-arrow-in-right"></i> Đăng nhập
                                    </a>
                                }
                            </div>
                        </div>
                        @if (ViewBag.IsLogin != true) // Show if not logged in
                        {
                            <div class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="employerDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-building"></i> Dành cho doanh nghiệp
                                </a>
                                <div class="dropdown-menu dropdown-menu-end fade-up" aria-labelledby="employerDropdown">

                                    <a class="dropdown-item" asp-area="" asp-controller="Company" asp-action="Create">
                                        <i class="bi bi-plus-circle"></i> Đăng ký doanh nghiệp
                                    </a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Register">
                                        <i class="bi bi-box-arrow-in-right"></i> Đăng ký nhân viên
                                    </a>
                                </div>
                            </div>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <main role="main" class="pb-3">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                    <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null) // Optional: Add for error messages too
            {
                <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)


        <script>
            $(document).ready(function () {
                function updateNotificationCount() {
                    $.get('/Notification/GetUnreadCount', function (data) {
                        if (data.count > 0) {
                            $('#notificationCount').text(data.count).show();
                        } else {
                            $('#notificationCount').hide();
                        }
                    });
                }
                updateNotificationCount();
                setInterval(updateNotificationCount, 30000);
            });
        </script>

        <style>
            .notification-dropdown {
                max-height: 500px;
                overflow-y: auto;
            }
            .notification-item {
                padding: 0.75rem 1rem;
                transition: background-color 0.2s;
            }
            .notification-item:hover {
                background-color: #f8f9fa;
            }
            .notification-item.unread {
                background-color: #f1f8ff;
                font-weight: 500;
            }
            .notification-item .badge {
                font-size: 0.75rem;
            }
            .notification-badge-animate {
                animation: notification-badge-pulse 1s ease-in-out;
            }
            @@keyframes notification-badge-pulse {
                0% { transform: scale(1); }
                50% { transform: scale(1.2); }
                100% { transform: scale(1); }
            }
            #notificationCount {
                font-size: 0.7rem;
                padding: 0.25em 0.6em;
                min-width: 1.5em;
                height: 1.5em;
                line-height: 1.5em;
                text-align: center;
                border-radius: 0.75em;
                background-color: #dc3545;
                color: white;
                box-shadow: 0 0 0 2px rgba(255, 255, 255, 0.8);
            }
            .dropdown-header {
                padding: 0.5rem 1rem;
                background-color: #f8f9fa;
            }
            .notification-item p {
                margin-bottom: 0.25rem;
            }
            .notification-item small {
                color: #6c757d;
            }
            
        </style>

</body>
</html>
