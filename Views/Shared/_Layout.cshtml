                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link fw-semibold d-flex align-items-center px-3 rounded dropdown-toggle"
                                        href="#" id="studentDropdown" role="button" data-bs-toggle="dropdown"
                                        aria-expanded="false">
                                        Quản lý sinh viên
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end fade-up" aria-labelledby="studentDropdown">
                                        <li class="mb-2">
                                            <a class="dropdown-item" asp-area="" asp-controller="Dashboard"
                                                asp-action="StudentMonthlyStats">
                                                <i class="bi bi-bar-chart-fill me-1"></i> Thống kê theo tháng
                                            </a>
                                        </li>
                                        <li class="mb-2">
                                            <a class="dropdown-item" asp-area="" asp-controller="Dashboard"
                                                asp-action="StudentYearlyStats">
                                                <i class="bi bi-bar-chart-fill me-1"></i> Thống kê theo năm
                                            </a>
                                        </li>
                                        <li class="mb-2">
                                            <a class="dropdown-item" asp-area="" asp-controller="User" asp-action="Index">
                                                <i class="bi bi-people-fill me-1"></i> Danh sách sinh viên
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link fw-semibold d-flex align-items-center px-3 rounded dropdown-toggle"
                                        href="#" id="companyDropdown" role="button" data-bs-toggle="dropdown"
                                        aria-expanded="false">
                                        Quản lý công ty
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end fade-up" aria-labelledby="companyDropdown">
                                        <li class="mb-2">
                                            <a class="dropdown-item" asp-area="" asp-controller="Dashboard"
                                                asp-action="CompanyMonthlyStats">
                                                <i class="bi bi-bar-chart-fill me-1"></i> Thống kê theo tháng
                                            </a>
                                        </li>
                                        <li class="mb-2">
                                            <a class="dropdown-item" asp-area="" asp-controller="Dashboard"
                                                asp-action="CompanyYearlyStats">
                                                <i class="bi bi-bar-chart-fill me-1"></i> Thống kê theo năm
                                            </a>
                                        </li>
                                        <li class="mb-2">
                                            <a class="dropdown-item" asp-area="" asp-controller="Company" asp-action="Index">
                                                <i class="bi bi-building me-1"></i> Danh sách doanh nghiệp
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link fw-semibold d-flex align-items-center px-3 rounded" asp-area=""
                                        asp-controller="Dashboard" asp-action="Index">
                                        Dashboard
                                    </a>
                                </li>
                            }
                            else if (ViewBag.Role == "1") // Employee
                            {
                                <li class="nav-item">
                                    <a class="nav-link fw-semibold d-flex align-items-center px-3 rounded" asp-area=""
                                        asp-controller="JobPosition" asp-action="Create">
                                        Đăng tin tuyển
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link fw-semibold d-flex align-items-center px-3 rounded" asp-area=""
                                        asp-controller="JobPosition" asp-action="ActiveJobs">
                                        Tin tuyển dụng
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link fw-semibold d-flex align-items-center px-3 rounded" asp-area=""
                                        asp-controller="Dashboard" asp-action="Index_Employee">
                                        Thống kê
                                    </a>
                                </li>
                            }
                            else if (ViewBag.Role == "2") // Student
                            {
                                <li class="nav-item">
                                    <a class="nav-link fw-semibold d-flex align-items-center px-3 rounded" asp-area=""
                                        asp-controller="JobPosition" asp-action="Index">
                                        Tìm việc
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link fw-semibold d-flex align-items-center px-3 rounded" asp-area=""
                                        asp-controller="JobPosition" asp-action="SavedJobs">
                                        Việc làm đã lưu
                                    </a>
                                </li>
                                <!-- Dropdown cho CV -->
                                <li class="nav-item dropdown">
                                    <a class="nav-link fw-semibold d-flex align-items-center px-3 rounded dropdown-toggle"
                                        href="#" id="cvDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        CV của tôi
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end fade-up" aria-labelledby="cvDropdown">
                                        <li class="mb-2">
                                            <a class="dropdown-item" asp-area="Index" asp-controller="CV" asp-action="Index">
                                                <i class="bi bi-file-earmark-person me-1"></i> Vị trí đã ứng tuyển
                                            </a>
                                        </li>
                                        <li class="mb-2">
                                            <a class="dropdown-item" asp-area="" asp-controller="CV"
                                                asp-action="SuggestHistory">
                                                <i class="bi bi-lightbulb me-1"></i> Gợi ý CV
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link fw-semibold d-flex align-items-center px-3 rounded" asp-area=""
                                        asp-controller="Dashboard" asp-action="Index_Student">
                                        Thống kê
                                    </a>
                                </li>
                            }
                            <!-- Thông báo -->
                            <li class="nav-item dropdown mx-1 position-relative">
                                <a class="nav-link position-relative px-3 rounded" href="#" id="notificationDropdown"
                                    role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-bell-fill fs-5"></i>
                                    <span id="notificationCount"
                                        class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger"
                                        style="font-size:0.7rem;display:none;">0</span>
                                </a>
                                <div class="dropdown-menu dropdown-menu-end notification-dropdown"
                                    aria-labelledby="notificationDropdown" style="width: 360px;"
                                    data-bs-auto-close="outside">
                                    <div class="dropdown-header d-flex justify-content-between align-items-center">
                                        <h6 class="mb-0">Thông báo</h6>
                                        <button class="btn btn-link btn-sm p-0 mark-all-read">
                                            <small>Đánh dấu đã đọc tất cả</small>
                                        </button>
                                    </div>
                                    <div class="notification-list" style="max-height: 400px; overflow-y: auto;">
                                        <!-- Notifications will be loaded here -->
                                    </div>
                                    <div class="dropdown-footer text-center py-2 border-top">
                                        <a href="#" class="text-decoration-none"></a>
                                    </div>
                                </div>
                            </li>
                            <!-- User dropdown -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center px-3 rounded" href="#"
                                    id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle fs-5 me-1"></i>
                                    <span>@(ViewBag.CurrentUser ?? "Tài khoản")</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end fade-up" aria-labelledby="userDropdown">
                                    @if (ViewBag.Role == "1")
                                    {
                                        <li class="mb-2">
                                            <a class="dropdown-item" asp-area="" asp-controller="Company" asp-action="Details"
                                                asp-route-id="@ViewBag.CurrentCompanyID">
                                                <i class="bi bi-person-square"></i> Thông tin công ty
                                            </a>
                                        </li>
                                        <li class="mb-2">
                                            <a class="dropdown-item" asp-area="" asp-controller="Employee"
                                                asp-action="CompanyEmployees">
                                                <i class="bi bi-building"></i> Nhân viên của công ty
                                            </a>
                                        </li>
                                    }
                                    else if (ViewBag.Role == "2")
                                    {
                                        <li class="mb-2">
                                            <a class="dropdown-item" asp-area="" asp-controller="User" asp-action="Profile">
                                                <i class="bi bi-person-square"></i> Thông tin cá nhân
                                            </a>
                                        </li>
                                    }
                                    <li class="mb-2">
                                        <a class="dropdown-item" asp-area="" asp-controller="Account"
                                            asp-action="ChangePassword">
                                            <i class="bi bi-key"></i> Đổi mật khẩu
                                        </a>
                                    </li>
                                    <li class="mb-2">
                                        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post"
                                            class="d-inline">
                                            <button type="submit" class="dropdown-item">
                                                <i class="bi bi-box-arrow-right"></i> Đăng xuất
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link fw-semibold d-flex align-items-center px-3 rounded" asp-area=""
                                    asp-controller="JobPosition" asp-action="Index">
                                    Việc làm
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link fw-semibold d-flex align-items-center px-3 rounded" asp-area=""
                                    asp-controller="Company" asp-action="Create">
                                    @* <i class="bi bi-building fs-5 me-1 text-warning"></i> *@ Dành cho doanh nghiệp
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-warning fw-bold px-3 ms-2" asp-area="" asp-controller="Account"
                                    asp-action="Login">Đăng nhập</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div style="height:64px"></div>

    <div class="container-fluid">
        <main role="main" class="pb-3">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                    <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        $(document).ready(function () {
            var notificationSkip = 0;
            var notificationTake = 5;
            var hasMoreNotifications = false;

            function renderNotificationItem(notification) {
                return `
                <div class="notification-item${notification.isRead ? '' : ' unread'}" data-id="${notification.notificationID}" data-path="${notification.notificationPath || ''}">
                    <div class="d-flex align-items-start">
                        <div class="notification-icon me-2">
                            <i class="fas fa-bell"></i>
                        </div>
                        <div class="flex-grow-1">
                            <div class="notification-text">${notification.message}</div>
                            <div class="notification-meta">
                                <small class="text-muted">
                                    <i class="far fa-clock me-1"></i>
                                    ${new Date(notification.createdAt).toLocaleString('vi-VN', {
                    hour: '2-digit',
                    minute: '2-digit',
                    day: '2-digit',
                    month: '2-digit',
                    year: 'numeric'
                })}
                                </small>
                            </div>
                        </div>
                        <form class="m-0 p-0">
                            <button type="button" class="btn btn-link btn-sm text-danger p-0 ms-2 delete-notification" title="Xóa thông báo">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </form>
                    </div>
                </div>
            `;
            }

            // Khi mở dropdown thì load lại toàn bộ danh sách
            $('#notificationDropdown').on('show.bs.dropdown', function () {
                var $dropdown = $(this).closest('.nav-item').find('.dropdown-menu');
                loadAllNotifications($dropdown);
            });

            function loadAllNotifications($dropdown) {
                var $list = $dropdown.find('.notification-list');
                $list.empty();

                $.get('/Notification/GetAllNotifications', function (data) {
                    if (!data.notifications || data.notifications.length === 0) {
                        $list.html(`
                        <div class="text-center py-3">
                            <i class="fas fa-bell-slash text-muted mb-2"></i>
                            <p class="text-muted mb-0">Không có thông báo</p>
                        </div>
                    `);
                        return;
                    }
                    data.notifications.forEach(function (notification) {
                        $list.append(renderNotificationItem(notification));
                    });
                }).fail(function () {
                    console.error('Failed to load notifications');
                });
            }

            // Đánh dấu đã đọc khi click
            $(document).on('click', '.notification-dropdown .notification-item', function (e) {
                e.preventDefault();
                e.stopPropagation();
                var $item = $(this);
                var notificationId = $item.data('id');
                var notificationPath = $item.data('path');
                $.post('/Notification/MarkAsRead', { id: notificationId }, function (response) {
                    if (response.success) {
                        $item.removeClass('unread');
                        updateNotificationCount();
                        if (notificationPath) {
                            if (!notificationPath.startsWith('/')) {
                                notificationPath = '/' + notificationPath;
                            }
                            window.location.href = notificationPath;
                        }
                    }
                });
            });

            function updateNotificationCount() {
                $.get('/Notification/GetUnreadCount', function (data) {
                    var $badge = $('#notificationCount');
                    if (data.count > 0) {
                        $badge.text(data.count > 99 ? '99+' : data.count).show();
                        $badge.addClass('animate');
                        setTimeout(function () {
                            $badge.removeClass('animate');
                        }, 500);
                    } else {
                        $badge.hide();
                    }
                });
            }

            // Đánh dấu tất cả đã đọc
            $('.mark-all-read').click(function (e) {
                e.preventDefault();
                e.stopPropagation();
                var $dropdown = $(this).closest('.dropdown-menu');
                $.post('/Notification/MarkAllAsRead', function (response) {
                    if (response.success) {
                        loadAllNotifications($dropdown);
                        updateNotificationCount();
                    }
                });
            });

            // Xóa thông báo khi bấm vào nút thùng rác
            $(document).on('click', '.delete-notification', function (e) {
                e.preventDefault();
                e.stopPropagation();
                var $item = $(this).closest('.notification-item');
                var notificationId = $item.data('id');
                $.post('/Notification/Delete/' + notificationId, function (response) {
                    if (response.success) {
                        $item.remove();
                        updateNotificationCount();
                    } else {
                        alert('Xóa thông báo thất bại!');
                    }
                });
            });

            // Initial load
            updateNotificationCount();
            setInterval(updateNotificationCount, 30000);
        });

        $(document).on('click', '.notification-dropdown', function (e) {
            e.stopPropagation();
        });

        $(document).on('hide.bs.dropdown', '.dropdown', function (e) {
            // Nếu click bên trong dropdown-menu thì ngăn đóng dropdown
            if ($(e.clickEvent && e.clickEvent.target).closest('.notification-dropdown').length) {
                e.preventDefault();
            }
        });
    </script>
</body>

</html>
