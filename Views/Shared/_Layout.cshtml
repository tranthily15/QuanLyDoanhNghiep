            <div class="container">
                <!-- Logo và Trang chủ bên trái -->
                <a class="navbar-brand fw-bold d-flex align-items-center me-4" asp-area="" asp-controller="JobPosition"
                    asp-action="Index">
                    <img src="~/img/logo.png" alt="Logo" width="44"
                        class="rounded-circle me-2 border border-2 shadow-sm" />
                    <span class="fs-4" style="color:#22305a;">FitJob</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="mainNav">
                    <ul class="navbar-nav align-items-center gap-2">

