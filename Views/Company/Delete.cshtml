@model QuanLyDoanhNghiep.Models.Company

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Company</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-4">
            Mã công ty:
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.CompanyID)
        </dd>
        <dt class = "col-sm-4">
            Tên Công ty:
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.CompanyName)
        </dd>
        <dt class = "col-sm-4">
            Địa chỉ:
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.StreetAddress)
        </dd>
        <dt class = "col-sm-4">
            Email:
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.CompanyEmail)
        </dd>
        <dt class = "col-sm-4">
            Mô tả:
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.CompanyDescription)
        </dd>
        <dt class = "col-sm-4">
            Logo:
        </dt>
        <dd class = "col-sm-8">

            @Html.DisplayFor(model => model.CompanyLogo)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CompanyID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
