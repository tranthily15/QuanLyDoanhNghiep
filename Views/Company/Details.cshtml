@model QuanLyDoanhNghiep.Models.Company

@{
    ViewData["Title"] = $"Thông tin công ty {Model.CompanyName}";
    // Giả sử bạn sẽ truyền danh sách Jobs qua ViewBag hoặc ViewModel
    // var companyJobs = ViewBag.CompanyJobs as List<JobPosition> ?? new List<JobPosition>();
}
<div class="box"></div>
<div class="box"></div>

<div class="company-profile-page">
    <!-- Banner Section -->
    <div class="company-banner-container">
        <div class="company-banner-bg" style="background-image: url('/img/company-cover-default.jpg');"> 
            </div>
        <div class="company-banner-overlay"></div>
        <div class="container company-banner-content">
            <div class="row align-items-end">
                <div class="col-md-8 d-flex align-items-center">
                    <div class="company-logo-wrapper">
                        <img src="~/img/CompanyLogo/@Model.CompanyLogo" alt="Logo @Model.CompanyName" class="company-logo-main" onerror="this.src='/img/company-default.png'"/>
                    </div>
                    <div class="company-header-info">
                        <h1 class="company-name-main">@Model.CompanyName</h1>
                        <p class="company-address-main">
                            <i class="fas fa-map-marker-alt"></i> @Model.StreetAddress, @(Model.Ward?.WardName ?? ""), @(Model.District?.DistrictName ?? ""), @(Model.Province?.ProvinceName ?? "")
                        </p>
                        @* Thêm các thông tin khác nếu có trong model, ví dụ:
                        <p class="company-website"><i class="fas fa-globe"></i> <a href="@Model.Website" target="_blank">@Model.Website</a></p>
                        <p class="company-size"><i class="fas fa-users"></i> Quy mô: @Model.CompanySize</p>
                        *@
                    </div>
                </div>
                <div class="col-md-4 text-end">
                    @* Nút theo dõi nếu cần *@
                    @* <button class="btn btn-follow"><i class="fas fa-plus"></i> Theo dõi</button> *@
                    @if(ViewBag.Role == "1") // Admin or Employee can edit
                    {
                         <a href="@Url.Action("Edit", new { id = Model.CompanyID })" class="btn btn-edit-company">
                            <i class="fas fa-edit"></i> Chỉnh sửa thông tin
                         </a>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container mt-4 company-content-section">
        <div class="row">
            <div class="col-lg-8">
                <!-- Giới thiệu công ty -->
                <div class="company-section">
                    <h2 class="section-title"><i class="fas fa-info-circle"></i> Giới thiệu công ty</h2>
                    <div class="section-content company-description">
                         @if (!string.IsNullOrEmpty(Model.CompanyDescription))
                        {
                            @Html.Raw(Model.CompanyDescription) // Dùng Raw nếu Description là HTML
                        }
                        else
                        {
                            <p class="text-muted">Chưa có thông tin giới thiệu về công ty.</p>
                        }
                    </div>
                </div>

                <!-- Việc làm đang tuyển (Placeholder) -->
                <div class="company-section">
                     <h2 class="section-title"><i class="fas fa-briefcase"></i> Việc làm đang tuyển</h2>
                    <div class="section-content">
                        @if (ViewBag.CompanyJobs != null)
                        {
                            foreach (var job in ViewBag.CompanyJobs)
                            {
                                <div class="job-listing-item">
                                     <a href="@Url.Action("Details", "JobPosition", new { id = job.PositionID })" class="job-title-link">@job.PositionName</a>
                                     <p class="job-salary">Lương: @(string.IsNullOrEmpty(job.Salary) ? "Thỏa thuận" : job.Salary)</p>
@*                                      <p class="job-location">Địa điểm: @(job.JobLocations?.FirstOrDefault()?.Province?.ProvinceName ?? "")</p>
 *@                                     <span class="job-date">Hạn nộp: @job.EndDate.ToString("dd/MM/yyyy")</span>
                                </div>
                            }
                        }
                        else
                        { 
                            <p class="text-muted">Công ty hiện chưa có tin tuyển dụng nào.</p>
                        }
                    </div>
                </div>

            </div>
            <div class="col-lg-4">
                <!-- Thông tin liên hệ -->
                 <div class="company-section company-side-info">
                    <h3 class="side-section-title">Thông tin liên hệ</h3>
                    <p><i class="fas fa-envelope"></i> <strong>Email:</strong> @Model.CompanyEmail</p>
                    <p><i class="fas fa-map-marker-alt"></i> <strong>Địa chỉ:</strong> @Model.StreetAddress, @(Model.Ward?.WardName ?? ""), @(Model.District?.DistrictName ?? ""), @(Model.Province?.ProvinceName ?? "")</p>
                      @* <p><i class="fas fa-globe"></i> <strong>Website:</strong> <a href="@Model.Website" target="_blank">@Model.Website</a></p> *@
                </div>
            </div>
        </div>
         <div class="text-center mt-4">
             <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Quay lại danh sách</a>
         </div>
    </div>
</div>


<style>
    :root {
        --primary-color: #FF4770;
        --secondary-color: #2767B1;
        --background-color: #FFFFFF;
        --second-background-color: #F8FAFC;
        --text-primary-color: #000000;
        --text-secondary-color: #666666;
        --border-color: #E0E0E0;
        --hover-color: #FF8A5C;
        --danger-color: #dc3545;
        --warning-color: #ffc107;
        --info-color: #17a2b8;
        /* Keep topcv colors for mapping if needed, but prefer new ones */
        --topcv-primary: var(--primary-color);
        --topcv-secondary: var(--text-primary-color); /* Map dark text to new primary text */
        --topcv-border: var(--border-color);
        --topcv-bg-light: var(--second-background-color);
        --topcv-text-muted: var(--text-secondary-color);
    }

    .company-profile-page {
        background-color: #f8f9fa; /* Light background for the whole page */
        padding-bottom: 40px;
    }

    /* Banner Styles */
    .company-banner-container {
        position: relative;
        height: 250px; /* Adjust height as needed */
        color: white;
        margin-bottom: 80px; /* Space for the logo overlap */
    }

    .company-banner-bg {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-size: cover;
        background-position: center;
        background-color: #eee; /* Fallback color */
    }

    .company-banner-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.4); /* Dark overlay */
    }

    .company-banner-content {
        position: absolute;
        bottom: -60px; /* Overlap bottom */
        left: 0;
        right: 0;
        z-index: 2;
    }

    .company-logo-wrapper {
        width: 120px;
        height: 120px;
        border-radius: 15px;
        background-color: white;
        padding: 10px;
        border: 3px solid white;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        margin-right: 25px;
    }

    .company-logo-main {
        width: 100%;
        height: 100%;
        object-fit: contain;
        border-radius: 10px;
    }

    .company-header-info {
        color: var(--topcv-secondary); /* Use dark color for text on white/light bg */
    }

    .company-name-main {
        font-size: 28px;
        font-weight: 700;
        margin-bottom: 5px;
        color: var(--topcv-secondary);
    }
    .company-address-main, .company-website, .company-size {
        font-size: 15px;
        margin-bottom: 3px;
        color: var(--topcv-text-muted);
    }
    .company-address-main i, .company-website i, .company-size i {
        margin-right: 8px;
        color: #ff6b35; /* Primary color from previous view */
        width: 15px;
    }
    .company-website a {
        color: var(--topcv-text-muted);
        text-decoration: none;
    }
     .company-website a:hover {
         color: #ff6b35;
         text-decoration: underline;
     }

    .btn-follow, .btn-edit-company {
        background-color: #ff6b35;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 8px;
        font-weight: 500;
        transition: background-color 0.3s ease;
    }
    .btn-follow i, .btn-edit-company i {
        margin-right: 5px;
    }

    .btn-follow:hover, .btn-edit-company:hover {
        background-color: #e05a2d;
        color: white;
    }

    /* Main Content Styles */
     .company-content-section {
        padding-top: 20px; /* Space above content after banner overlap */
    }
    .company-section {
        background-color: white;
        border-radius: 12px;
        padding: 25px;
        margin-bottom: 25px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.07);
    }

    .section-title {
        font-size: 20px;
        font-weight: 600;
        color: var(--topcv-secondary);
        margin-bottom: 20px;
        padding-bottom: 15px;
        border-bottom: 1px solid var(--topcv-border);
    }
     .section-title i {
         margin-right: 10px;
         color: #ff6b35;
     }

    .section-content {
        line-height: 1.7;
        color: var(--topcv-secondary);
    }
    .company-description img {
        max-width: 100%;
        height: auto;
        margin-top: 10px;
        margin-bottom: 10px;
        border-radius: 8px;
    }

    /* Side Info */
    .company-side-info {
        background-color: white; /* Keep side info background white */
    }
     .side-section-title {
         font-size: 18px;
         font-weight: 600;
         color: var(--topcv-secondary);
         margin-bottom: 15px;
     }
    .company-side-info p {
        margin-bottom: 12px;
        font-size: 14px;
        color: var(--topcv-secondary);
    }
     .company-side-info p i {
         width: 20px;
         text-align: center;
         margin-right: 8px;
         color: #ff6b35;
     }
     .company-side-info strong {
         font-weight: 500;
     }
     .company-side-info a {
         color: #ff6b35;
         text-decoration: none;
     }
     .company-side-info a:hover {
         text-decoration: underline;
     }

    /* Job Listing Placeholder Styles */
    .job-listing-item {
        border: 1px solid var(--topcv-border);
        padding: 15px;
        margin-bottom: 15px;
        border-radius: 8px;
        transition: box-shadow 0.3s ease;
    }
     .job-listing-item:hover {
         box-shadow: 0 3px 8px rgba(0,0,0,0.1);
     }
    .job-title-link {
        font-size: 16px;
        font-weight: 600;
        color: var(--topcv-secondary);
        text-decoration: none;
        display: block;
        margin-bottom: 5px;
    }
     .job-title-link:hover {
         color: #ff6b35;
     }
    .job-salary, .job-location, .job-date {
        font-size: 14px;
        color: var(--topcv-text-muted);
        margin-bottom: 3px;
    }
     .job-date {
        font-style: italic;
     }


</style>