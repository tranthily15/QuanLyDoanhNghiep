@model IEnumerable<QuanLyDoanhNghiep.Models.Employee>

@{
    ViewData["Title"] = "Danh sách nhân viên";
}
<div class="box"></div>
<div class="container py-2">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "JobPosition")">Trang chủ</a>
            </li>
            <li class="breadcrumb-item">
                <a href="@Url.Action("Details", "Company", new { id = ViewBag.CurrentCompanyID })">Thông tin công ty</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                Quản lý nhân viên
            </li>
        </ol>
    </nav>
</div>
<div class="container mt-4">
    <p>
        <a asp-action="Create" class="btn btn-apply-now">
            <i class="fas fa-plus" title="Thêm mới nhân viên"></i>
        </a>
    </p>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Họ và tên</th>
                    <th>Giới tính</th>
                    <th>Số điện thoại</th>
                    <th>Email</th>
                    <th>Tên đăng nhập</th>
                    @* <th>Thao tác</th> *@
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.EmployeeName</td>
                        <td>@(item.Gender ? "Nam" : "Nữ")</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.Email</td>
                        <td>@item.Account?.UserName</td>
                        @*  <td>
                            <a asp-action="Details" asp-route-id="@item.EmployeeID" class="btn btn-info btn-sm">
                                <i class="fas fa-info-circle"></i> Chi tiết
                            </a>
                        </td> *@
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<style>
    .btn-apply-now {
        background-color: #ff6b35;
        color: white;
        padding: 12px 24px;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s ease;
    }

    .btn-apply-now:hover {
        background-color: #ff6b35;
        transform: translateY(-2px);
    }
</style>